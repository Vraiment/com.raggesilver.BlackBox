{
  "app-id": "com.raggesilver.BlackBox",
  "runtime": "org.gnome.Platform",
  "runtime-version": "48",
  "sdk": "org.gnome.Sdk",
  "command": "blackbox",
  "finish-args": [
    "--filesystem=host",
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=all",
    "--talk-name=org.freedesktop.Flatpak"
  ],
  "cleanup": [
    "/include",
    "/lib/girepository-1.0",
    "/lib/pkgconfig",
    "/libexec",
    "/man",
    "/share/doc",
    "/share/gtk-doc",
    "/share/installed-tests",
    "/share/man",
    "/share/pkgconfig",
    "/share/vala",
    "*.la",
    "*.a"
  ],
  "modules": [
    {
      "name": "vte",
      "buildsystem": "meson",
      "config-opts": ["-Dgtk4=true", "-Dgtk3=false", "-Dsixel=true"],
      "sources": [
        {
          "type": "archive",
          "url": "https://gitlab.gnome.org/GNOME/vte/-/archive/3c8f66be867aca6656e4109ce880b6ea7431b895/vte-3c8f66be867aca6656e4109ce880b6ea7431b895.tar.gz",
